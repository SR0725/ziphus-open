{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.experimental.useFlatConfig": false,
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "cSpell.words": [
    "blocknote",
    "fastify",
    "nextui",
    "Pangu",
    "socketio",
    "sonner",
    "tanstack",
    "Ziphus",
    "zustand"
  ]
}
