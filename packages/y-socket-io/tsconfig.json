{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
